#include <stdio.h>
#include <stdlib.h>

int main(void) {

	int edad;
	int *ptr_edad=&edad;  //asignacion del puntero
	printf("Ejemplo de punteros\n");
	printf("Ingrese el valor de su edad\n");

	//scanf("%d",&edad);
	//printf("Valor de edad->%d\n",*ptr_edad);

	scanf("%d",ptr_edad);
	printf("Valor de edad->%d\n",edad);

	system("pause");
	return EXIT_SUCCESS;
}
